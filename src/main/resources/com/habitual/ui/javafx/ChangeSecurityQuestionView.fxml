<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" styleClass="root-pane" prefWidth="400.0" prefHeight="350.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.habitual.ui.javafx.ChangeSecurityQuestionViewController" stylesheets="@futuristic-styles.css">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <Label styleClass="title-label" text="Change Security Question" />
    <Label text="Current Password:" styleClass="form-label" />
    <PasswordField fx:id="currentPasswordField" promptText="Enter your current password" />
    <Label text="New Security Question:" styleClass="form-label" />
    <TextField fx:id="newSecurityQuestionField" promptText="e.g., What is your favorite color?" />
    <Label text="New Security Answer:" styleClass="form-label" />
    <TextField fx:id="newSecurityAnswerField" promptText="Enter your answer" />
    <Button fx:id="updateButton" onAction="#handleUpdateSecurityQuestion" text="Update" styleClass="button-futuristic" />
    <Label fx:id="statusLabel" styleClass="error-label" text="" />
</VBox>
