<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" styleClass="root-pane" prefWidth="400.0" prefHeight="400.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.habitual.ui.javafx.ForgotPasswordViewController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <Label styleClass="title-label" text="Reset Password" />
    <Label text="Username:" styleClass="form-label" />
    <TextField fx:id="usernameField" promptText="Enter your username" />
    <Button fx:id="fetchQuestionButton" onAction="#handleFetchQuestion" text="Get Security Question" styleClass="button-futuristic" />
    <Label fx:id="securityQuestionLabel" styleClass="form-label" text="" wrapText="true" />
    <Label text="Answer:" styleClass="form-label" />
    <TextField fx:id="answerField" promptText="Enter your answer" />
    <Label text="New Password:" styleClass="form-label" />
    <PasswordField fx:id="newPasswordField" promptText="Enter new password" />
    <Button fx:id="resetPasswordButton" onAction="#handleResetPassword" text="Reset Password" styleClass="button-futuristic" />
    <Label fx:id="statusLabel" styleClass="error-label" text="" />
    <Button fx:id="backToLoginButton" onAction="#handleBackToLogin" text="Back to Login" styleClass="link-button-futuristic" />
</VBox>
